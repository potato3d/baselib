#-----------------------------------------------------------------------------------------------------------------------
# remove qt from default configuration
#-----------------------------------------------------------------------------------------------------------------------
CONFIG -= qt

#-----------------------------------------------------------------------------------------------------------------------
# switch for 32 and 64 bit compilation
#-----------------------------------------------------------------------------------------------------------------------
BUILD_32_BITS = $$find(QMAKE_QMAKE, 32bit)

#-----------------------------------------------------------------------------------------------------------------------
# define library directory
#-----------------------------------------------------------------------------------------------------------------------
CONFIG(debug, debug|release) {
	DEFINES += _DEBUG
	TARGET_DEBUG = d
	isEmpty(BUILD_32_BITS) {
		win32 {
			TARGET_SUFFIX = w64
		}
		unix {
			TARGET_SUFFIX = l64
		}
	} else {
		win32 {
			TARGET_SUFFIX = w32
		}
		unix {
			TARGET_SUFFIX = l32
		}
	}
} else {
	TARGET_DEBUG = ""
	isEmpty(BUILD_32_BITS) {
		win32 {
			TARGET_SUFFIX = w64
		}
		unix {
			TARGET_SUFFIX = l64
		}
	} else {
		win32 {
			TARGET_SUFFIX = w32
		}
		unix {
			TARGET_SUFFIX = l32
		}
	}
}

#-----------------------------------------------------------------------------------------------------------------------
# define root directory
#-----------------------------------------------------------------------------------------------------------------------
ROOT_DIR         = $$PWD/..
